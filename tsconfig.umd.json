{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "umd",
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "./dist/umd"
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },
    "files": [
        "keyboard-attached.ts",
        "src/autosize/autosize.ts",
        "src/content-react-to-keyboard/content-react-to-keyboard.ts",
        "src/react-to-keyboard/react-to-keyboard.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}